<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_car_rental_tree" model="ir.ui.view">
        <field name="name">car.rental.list</field>
        <field name="model">car.rental</field>
        <field name="arch" type="xml">
            <list string="Car Rentals">
                <field name="name"/>
                <field name="car_id"/>
                <field name="customer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_car_rental_form" model="ir.ui.view">
        <field name="name">car.rental.form</field>
        <field name="model">car.rental</field>
        <field name="arch" type="xml">
            <form string="Car Rental">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'"/>
                    <button name="action_done" type="object" string="Mark as Done" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['cancelled','done']"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,done,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="car_id"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <!-- <field name="state"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_car_rental" model="ir.actions.act_window">
        <field name="name">Car Rentals</field>
        <field name="res_model">car.rental</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create car rental contracts and manage bookings.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <!-- <menuitem id="menu_car_rental_root" name="Car Rental" sequence="10" /> -->
    <menuitem id="menu_car_rental_main" name="Cars Rentals" parent="hotel_management_menu_root" action="action_car_rental" sequence="15"/>
</odoo>
